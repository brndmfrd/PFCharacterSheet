<UserControl x:Class="CharacterModule.Views.CharacterViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:CharacterModule.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="670" d:DesignWidth="1100"
             d:DataContext="{d:DesignInstance ViewModel:CharacterViewModel}">

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/ActiveCharacter;component/SharedResources/MainContentStyles.xaml"/>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" MinWidth="0" MaxWidth="550" Margin="0,0,30,0">
            <Label Content="{Binding Strength, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeStrengthCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Dexterity, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeDexterityCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Constitution, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeConstitutionCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Intelligence, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeIntelligenceCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Wisdom, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeWisdomCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Charisma, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeCharismaCommand}" />
                </Label.InputBindings>
            </Label>
        </StackPanel>
        
        <!-- Right Side of the Stack Panel-->
        <StackPanel Orientation="Vertical" MinWidth="0" MaxWidth="550">
            <Label Content="{Binding CharacterName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeCharacterNameCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangePlayerNameCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Race, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeRaceCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Size, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeSizeCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Alignment, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeAlignmentCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeAgeCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Deity, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeDeityCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeGenderCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeHeightCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeWeightCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Eyes, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeEyesCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Hair, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeHairCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Homeland, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeHomelandCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding Languages, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeLanguagesCommand}" />
                </Label.InputBindings>
            </Label>
            <Label Content="{Binding ExperiencePoints, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=MainContentButtonStyle}">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ChangeExperiencePointsCommand}" />
                </Label.InputBindings>
            </Label>
        </StackPanel>

    </StackPanel>    
</UserControl>
