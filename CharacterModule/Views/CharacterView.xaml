<Grid x:Class="CharacterModule.Views.CharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:CharacterModule.ViewModels"
             xmlns:View="clr-namespace:CharacterModule.Views"
             mc:Ignorable="d"              
             d:DesignHeight="700" d:DesignWidth="1100"             
      >

    <!-- Everything about this Grid is under the rule of our beloved ViewModel-->
    <Grid.DataContext>
        <ViewModel:CharacterViewModel/>
    </Grid.DataContext>

    <!-- Look at me.  I am the content now.-->
    <View:CharacterViewControl/>

</Grid>
